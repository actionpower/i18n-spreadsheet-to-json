{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest", "@types/lodash.merge", "@types/lodash.setwith"]
  },
  "include": ["index.mts", "__test__/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": { "esm": true }
}
